        <li>Price: $<%=product.price %></li>
        <li>Category: <a href="/products?category=<%=product.category %>"><%=product.category %></a>
        </li>
    </ul>
    <section>
        <!-- <a href="/products">Go Back</a> -->
        <form action="/products">
            <button>Go Back</button>
        </form>
